  <meta property="og:description" content={description} />
  <meta property="og:type" content="website" />
  <meta property="og:url" content="https://lading.thungcartonbienhoa.vn/" />
  <meta property="og:image" content="https://lading.thungcartonbienhoa.vn/images/hero-optimized.webp" />
  
