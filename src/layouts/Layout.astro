      "@type": "ContactPoint",
      "telephone": "+84-375-201-015",
      "email": "admin@thungcartonbienhoa.vn",
      "contactType": "customer service",
      "availableLanguage": "Vietnamese"
    },
    "sameAs": [
      "https://thungcartonbienhoa.vn"
    ],
    "offers": {
      "@type": "AggregateOffer",
      "description": "Thùng carton và bao bì đóng gói chất lượng cao"
    }
  }
  </script>

  <!-- Critical CSS with Mobile Optimizations -->
  <style>
    body { 
      margin: 0; 
      font-family: system-ui, -apple-system, sans-serif;
      -webkit-font-smoothing: antialiased;
      -moz-osx-font-smoothing: grayscale;
    }
    
    /* Screen reader only content */
    .sr-only {
      position: absolute;
      width: 1px;
      height: 1px;
      padding: 0;
      margin: -1px;
      overflow: hidden;
      clip: rect(0, 0, 0, 0);
      white-space: nowrap;
      border: 0;
    }
    
    /* Critical CLS Prevention */
    .hero-title {
      min-height: 5.5rem;
      line-height: 1.1;
      contain: layout size;
      transform: translateZ(0);
    }
    
    /* Complete video controls elimination */
    video::-webkit-media-controls,
    video::-webkit-media-controls-enclosure,
    video::-webkit-media-controls-panel,
    video::-webkit-media-controls-play-button,
    video::-webkit-media-controls-start-playback-button,
    video::-webkit-media-controls-timeline,
    video::-webkit-media-controls-current-time-display,
    video::-webkit-media-controls-time-remaining-display,
    video::-webkit-media-controls-mute-button,
    video::-webkit-media-controls-volume-slider {
      display: none !important;
      opacity: 0 !important;
      width: 0 !important;
      height: 0 !important;
    }
    
    /* Hero section layout stability */
    .hero-section {
      contain: layout style size;
      min-height: 100vh;
      transform: translateZ(0);
    }
    
    .hero-content-container {
      contain: layout size;
      min-height: 100vh;
      width: 100%;
      transform: translateZ(0);
    }
    
    /* Video container layout prevention */
    video {
      contain: layout size !important;
      transform: translateZ(0);
    }
    
    /* Prevent all layout shifts */
    * {
      box-sizing: border-box;
    }
    
    img, video {
      max-width: 100%;
      height: auto;
      contain: layout;
    }
    
    .product-image {
      width: 100%;
      height: 16rem;
      object-fit: cover;
      aspect-ratio: 16/10;
      transform: translateZ(0);
      will-change: transform;
    }
    
    .product-image:not(.loaded) {
      background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
      background-size: 200% 100%;
      animation: shimmer 1.5s infinite;
    }
    
    @keyframes shimmer {
      0% { background-position: -200% 0; }
      100% { background-position: 200% 0; }
    }
    
    /* Mobile touch optimizations */
    @media (max-width: 768px) {
      * {
        -webkit-tap-highlight-color: transparent;
        touch-action: manipulation;
      }
      
      button, a {
        min-height: 44px;
        min-width: 44px;
      }
      
      .product-image {
        height: 12rem;
      }
    }
    
    /* Performance optimizations */
    video {
      will-change: transform;
    }
    
    .scroll-container {
      -webkit-overflow-scrolling: touch;
      overflow-scrolling: touch;
    }
  </style>
</head>
<body>
  <slot />
  
  <!-- Critical Performance & Analytics -->
  <script>
    // Page initialization without forced scrolling
    
    // Critical CSS injection first
    const criticalCSS = `
      .hero-section{min-height:100vh;contain:layout style;position:relative}
      .hero-content-container{contain:layout;min-height:100vh;width:100%}
      video::-webkit-media-controls{display:none!important}
      video::-webkit-media-controls-enclosure{display:none!important}
      .hero-content-animate{opacity:0;transform:translateY(20px);animation:fadeInUp .8s ease-out .2s forwards}
      @keyframes fadeInUp{to{opacity:1;transform:translateY(0)}}
    `;
    const style = document.createElement('style');
    style.textContent = criticalCSS;
    document.head.insertBefore(style, document.head.firstChild);
    
    // Preload critical resources
    const preloadResources = [
      { href: '/images/hero-optimized.webp', as: 'image', type: 'image/webp' },
      { href: '/images/hero-optimized.jpg', as: 'image', type: 'image/jpeg' }
    ];
    preloadResources.forEach(resource => {
      const link = document.createElement('link');
      link.rel = 'preload';
      link.href = resource.href;
      link.as = resource.as;
      if (resource.type) link.type = resource.type;
      document.head.appendChild(link);
    });
    
    // Initialize Vercel Speed Insights for performance monitoring
    import('@vercel/speed-insights').then((module) => {
      if (module.inject) {
        module.inject();
        console.log('Speed Insights initialized for performance tracking');
      }
    }).catch(() => {
      console.log('Speed Insights not available in development');
    });
    
    // Defer non-critical scripts
    requestIdleCallback(() => {
      Promise.all([
        import('/src/lib/analytics.js').then(({ initAnalytics }) => initAnalytics()),
        import('/src/lib/performance.js').then(({ initPerformanceOptimizations }) => initPerformanceOptimizations()),
        import('/src/lib/tracking.js').then(({ initGlobalTracking, initVideoTracking, initScrollTracking }) => {
          initGlobalTracking();
          initVideoTracking();
          initScrollTracking();
        }),
        import('/src/lib/auto-tracking.js').then(({ initAutoTracking, initPerformanceMonitoring, initMobileOptimizations, initLazyLoading }) => {
          initAutoTracking();
          initPerformanceMonitoring();
          initMobileOptimizations();
          initLazyLoading();
        })
      ]).catch(() => {});
    });
  </script>
</body>
</html>
