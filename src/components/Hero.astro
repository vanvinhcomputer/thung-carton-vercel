<script>
  // Performance-optimized video loading with fallbacks
  document.addEventListener('DOMContentLoaded', () => {
    const video = document.getElementById('hero-video');
    const fallbackImage = document.getElementById('hero-fallback');
    
    // Enhanced Intersection Observer with better performance
    const videoObserver = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting && video) {
          // Delay video loading to prioritize critical resources
          requestIdleCallback(() => {
            video.load();
            
            // Enhanced video handling for full duration playback
            video.addEventListener('loadedmetadata', () => {
              console.log('Video loaded - Duration:', video.duration, 'seconds');
              video.currentTime = 0;
            });
            
            video.addEventListener('loadeddata', () => {
              video.play().then(() => {
                // Successful video load - show video with high clarity
                video.style.opacity = '0.9';
                if (fallbackImage) {
                  fallbackImage.style.opacity = '0.05';
                  fallbackImage.style.filter = 'blur(3px) brightness(0.2)';
                }
                console.log('Video playing full duration:', video.duration, 'seconds');
              }).catch(() => {
                // Video failed - keep fallback image visible
                console.log('Video autoplay blocked - using fallback image');
                video.style.display = 'none';
                if (fallbackImage) {
                  fallbackImage.style.opacity = '0.8';
                  fallbackImage.style.filter = 'brightness(0.6)';
                }
              });
            });
            
            // Ensure video plays full duration without cuts
            video.addEventListener('canplaythrough', () => {
              if (video.paused) {
                video.play();
              }
            });
            
            // Perfect seamless loop
            video.addEventListener('ended', () => {
              video.currentTime = 0;
              video.play();
            });
            
            // Prevent seeking issues that could cut video short
            video.addEventListener('seeking', () => {
              if (video.currentTime > video.duration - 0.5) {
                video.currentTime = 0;
              }
            });
            
            // Handle video errors gracefully
            video.addEventListener('error', () => {
              video.style.display = 'none';
              if (fallbackImage) fallbackImage.style.opacity = '0.6';
            });
          });
          
          videoObserver.unobserve(video);
        }
      });
    }, {
      threshold: 0.1,
      rootMargin: '50px 0px'
    });
    
    if (video) {
      videoObserver.observe(video);
    }
  });
</script>