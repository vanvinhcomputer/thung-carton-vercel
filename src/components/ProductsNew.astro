<section id="san-pham" class="py-16 bg-gradient-to-br from-slate-50 to-gray-100" role="region" aria-labelledby="products-title">
  <div class="container mx-auto px-6 max-w-7xl">
    <!-- Section Header -->
    <div class="text-center mb-12">
      <h2 id="products-title" class="text-4xl md:text-5xl font-bold text-gray-800 mb-6">
        Sản Phẩm Của Chúng Tôi
      </h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto leading-relaxed">
        Danh mục sản phẩm đa dạng với chất lượng xuất sắc, đáp ứng mọi nhu cầu đóng gói của doanh nghiệp
      </p>
    </div>

    <!-- Product Category Tabs -->
    <div class="mb-12">
      <div class="flex flex-wrap justify-center gap-2 bg-white p-2 rounded-2xl shadow-lg border border-gray-100 max-w-4xl mx-auto">
        <button class="product-tab active px-6 py-3 rounded-xl font-semibold text-sm transition-all duration-300 bg-gradient-to-r from-emerald-600 to-emerald-700 text-white shadow-lg" data-category="carton-5-lop" onclick="window.switchProductTab && window.switchProductTab('carton-5-lop', this)">
          Thùng Carton 5 Lớp
        </button>
        <button class="product-tab px-6 py-3 rounded-xl font-semibold text-sm transition-all duration-300 text-gray-600 hover:bg-gray-100 hover:text-gray-800" data-category="carton-3-lop" onclick="window.switchProductTab && window.switchProductTab('carton-3-lop', this)">
          Thùng Carton 3 Lớp
        </button>
        <button class="product-tab px-6 py-3 rounded-xl font-semibold text-sm transition-all duration-300 text-gray-600 hover:bg-gray-100 hover:text-gray-800" data-category="hop-ship-cod" onclick="window.switchProductTab && window.switchProductTab('hop-ship-cod', this)">
          Hộp Ship COD
        </button>
        <button class="product-tab px-6 py-3 rounded-xl font-semibold text-sm transition-all duration-300 text-gray-600 hover:bg-gray-100 hover:text-gray-800" data-category="hop-nap-gai" onclick="window.switchProductTab && window.switchProductTab('hop-nap-gai', this)">
          Hộp Nắp Gài
        </button>
        <button class="product-tab px-6 py-3 rounded-xl font-semibold text-sm transition-all duration-300 text-gray-600 hover:bg-gray-100 hover:text-gray-800" data-category="tam-lot" onclick="window.switchProductTab && window.switchProductTab('tam-lot', this)">
          Tấm Lót
        </button>
      </div>
    </div>

    <!-- Products Grid Container -->
    <div id="products-container" class="min-h-[600px]" style="contain: layout;">
      <!-- Products Grid -->
      <div id="products-grid" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
        <!-- Products will be loaded here dynamically -->
      </div>

      <!-- Pagination -->
      <div id="pagination-container" class="flex justify-center items-center space-x-2">
        <!-- Pagination will be loaded here dynamically -->
      </div>
    </div>
  </div>
