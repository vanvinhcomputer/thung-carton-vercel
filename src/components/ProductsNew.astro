  // Pagination state
  let currentPage = 1;
  let currentCategory = 'carton-5-lop';
  const itemsPerPage = 6;

  // Tab switching function
  window.switchProductTab = function(category, tabElement) {
    // Update tab states
    document.querySelectorAll('.product-tab').forEach(tab => {
      tab.classList.remove('active', 'bg-gradient-to-r', 'from-emerald-600', 'to-emerald-700', 'text-white', 'shadow-lg');
      tab.classList.add('text-gray-600', 'hover:bg-gray-100', 'hover:text-gray-800');
    });
    
    tabElement.classList.add('active', 'bg-gradient-to-r', 'from-emerald-600', 'to-emerald-700', 'text-white', 'shadow-lg');
    tabElement.classList.remove('text-gray-600', 'hover:bg-gray-100', 'hover:text-gray-800');
    
    // Update current category and reset page
    currentCategory = category;
    currentPage = 1;
    
    // Load products for new category
    loadProducts();
    
    // Track category switch
    if (window.trackEvent) {
      window.trackEvent('category_switch', 'products', category);
    }
  };

  // Load products function with CLS prevention
  function loadProducts() {
    const products = productData[currentCategory] || [];
    const totalPages = Math.ceil(products.length / itemsPerPage);
    const startIndex = (currentPage - 1) * itemsPerPage;
    const endIndex = startIndex + itemsPerPage;
    const currentProducts = products.slice(startIndex, endIndex);
    
    // Immediate render without skeleton to prevent CLS
    renderProducts(currentProducts);
    renderPagination(totalPages);
    
    // Removed auto-scroll to let users start from hero section
  }

  // Render products function
  function renderProducts(products) {
    const grid = document.getElementById('products-grid');
    
    grid.innerHTML = products.map((product, index) => `
      <div class="product-card group bg-white rounded-2xl shadow-md overflow-hidden hover:shadow-2xl transition-all duration-500 border border-gray-100 hover:border-emerald-300 transform hover:-translate-y-2 hover:scale-105">
        <!-- Product Image -->
        <div class="relative overflow-hidden bg-gradient-to-br from-gray-50 to-gray-100" style="height: 320px; aspect-ratio: 4/3;">
          <img 
            src="${product.image}" 
            alt="${product.alt}"
            class="product-image w-full h-full object-contain p-3 transition-transform duration-300 group-hover:scale-110"
            loading="${index < 6 ? 'eager' : 'lazy'}"
            decoding="async"
            width="400"
            height="320"
            onload="this.classList.add('loaded')"
            onerror="this.style.display='none'"
            style="object-fit: contain; object-position: center;"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-black/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
        </div>
        
        <!-- Product Content -->
        <div class="p-4 space-y-4">
          <!-- Product Name -->
          <h3 class="font-bold text-gray-800 text-base leading-tight group-hover:text-emerald-700 transition-colors duration-300 text-center">
            ${product.name}
          </h3>
          
          <!-- Price -->
          <div class="text-center">
            <span class="text-emerald-800 font-bold text-lg">
              ${product.specs.price || 'Liên hệ'}
            </span>
          </div>
          
          <!-- Order Now Button -->
          <a href="https://zalo.me/0375201015" target="_blank" 
             class="block text-center bg-gradient-to-r from-emerald-600 to-emerald-700 hover:from-emerald-700 hover:to-emerald-800 text-white py-3 px-4 rounded-xl font-bold text-sm transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl" 
             onclick="window.trackEvent && window.trackEvent('order_click', 'products', '${product.id}')">
            Đặt Hàng Ngay
          </a>
        </div>
      </div>
    `).join('');
  }

  // Pagination function with icons
  function renderPagination(totalPages) {
    const container = document.getElementById('pagination-container');
    
    if (totalPages <= 1) {
      container.innerHTML = '';
      return;
    }

    let paginationHTML = `
      <div class="flex items-center justify-center space-x-3">
        ${Array.from({length: totalPages}, (_, i) => i + 1).map(page => `
          <button onclick="changePage(${page})" 
                  aria-label="Chuyển đến trang ${page}"
                  class="w-8 h-8 rounded-full transition-all duration-300 flex items-center justify-center ${page === currentPage ? 'bg-emerald-700 ring-2 ring-emerald-300' : 'bg-gray-400 hover:bg-gray-500'}"
                  ${page === currentPage ? 'aria-current="page"' : ''}>
            <span class="sr-only">Trang ${page}</span>
          </button>
        `).join('')}
      </div>
    `;
    
    container.innerHTML = paginationHTML;
  }

  // Change page function
  window.changePage = function(page) {
    currentPage = page;
    loadProducts();
    
    // Track pagination
    if (window.trackEvent) {
      window.trackEvent('pagination', 'products', `page_${page}`);
    }
  };

  // Initialize products on page load
  document.addEventListener('DOMContentLoaded', function() {
    loadProducts();
  });
